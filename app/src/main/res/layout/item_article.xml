<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite">

    <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8f212121"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_border"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/more_info"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="@string/see_more"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="bottom|end"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:background="@drawable/paste_border"
                tools:ignore="ContentDescription"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/shape_likes"
                android:gravity="center"
                android:layout_gravity="bottom|start"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:backgroundTint="@android:color/transparent"
                    android:tint="@color/md_red_700"
                    android:src="@drawable/sad"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sad_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/neutral_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:backgroundTint="@android:color/transparent"
                    android:tint="@color/md_yellow_700"
                    android:src="@drawable/neutral"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/neutral_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/happy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:backgroundTint="@android:color/transparent"
                    android:tint="@color/md_green_700"
                    android:src="@drawable/happy"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/happy_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.cardview.widget.CardView>